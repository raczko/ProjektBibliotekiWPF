<Window x:Class="BibliotekaWPFApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BibliotekaWPFApp"
        mc:Ignorable="d"
        Title="LoginWindow" Height="221" Width="200">
    <Grid>
        <Button Content="Zaloguj" HorizontalAlignment="Left" Margin="16,127,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click" />
        <Label Content="Login" HorizontalAlignment="Left" Margin="16,11,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="loginTxt" HorizontalAlignment="Left" Margin="16,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />
        <Label Content="Hasło" HorizontalAlignment="Left" Margin="16,73,0,0" VerticalAlignment="Top" />
        <PasswordBox x:Name="passwordTxt" HorizontalAlignment="Left" Margin="16,104,0,0" VerticalAlignment="Top" Width="120" />
        <Button Content="Rejestracja" HorizontalAlignment="Left" Margin="16,152,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click_1" />
    </Grid>
</Window>